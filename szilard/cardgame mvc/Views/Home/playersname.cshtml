@model string[]
<form method="post" action="/Home/playersname">

@for (int i = 0; i < Model.Length; i++)
{
    <div>
    <label for="playerid@i">@(i+1) játékos neve</label>
    <input type="text" name="playersname" id="playersid@i" value="@Model[i]">
</div>
}

<input type="submit" value="tovább">
</form>