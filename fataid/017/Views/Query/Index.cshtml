@model QueryModel
@{
    ViewData["Title"] = "Query page";
}

<div class="text-center">
    <h1 class="display-4">Query</h1>
    <form method="POST" action="/query/index">
        <div><label for="min">Minimum: </label><input id="min" name="min" type="number" min="1" max="100" value="@Model.Min"/></div>
        <div><label for="max">Maximum: </label><input id="max" name="max" type="number" min="1" max="100" value="@Model.Max"/></div>
        <div><label for="inv">Invert: </label><input id="inv" name="inv" type="checkbox" value="true"/></div>
        <div><input type="submit"/></div>
    </form>
</div>
